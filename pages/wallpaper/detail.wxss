swiper {
  width: 100vw; height: 100vh;
}

.img-opt {
  width: 100vw; height: 8vh;
  position: fixed;
  left: 0; bottom: 0;
  z-index: 1;
}
.img-opt .bg {
  width: 100%; height: 100%;
  background: #000;
  opacity: .5;
}
.img-opt .content {
  width: 100%; height: 100%;
  color: #fff;
  position: absolute;
  left: 0; top: 0; z-index: 2;

  display: flex;
  justify-content: space-around;
  align-items: center;
}
.img-opt .content image {
  width: 4vh; height: 4vh;
  background: transparent;
}
